<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    android:elevation="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="15dp"
            android:id="@+id/surah_design_container"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/surah_design_title"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:text="Surah Fusilat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/surah_design_playIcon"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_width="30dp"
                android:src="@drawable/icon_play"
                android:layout_height="30dp"
                app:tint="@color/colorPrimaryDark" />
            <ImageView
                android:id="@+id/surah_design_DownloadIcon"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:src="@drawable/icon_download"
                android:layout_height="30dp"
                app:tint="@color/colorPrimaryDark" />

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/surah_design_progressBar"
                android:layout_width="40dp"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:layout_height="40dp"
                app:cpb_background_progressbar_color="#b6bbd8"
                app:cpb_background_progressbar_width="5dp"
                app:cpb_progress_direction="to_right"
                app:cpb_progressbar_color="#3f51b5"
                app:cpb_progressbar_width="3dp"
                app:cpb_round_border="false" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/surah_design_deleteIcon"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:src="@drawable/icon_delete"
                android:layout_height="30dp"
                app:tint="@color/colorPrimaryDark" />
        </LinearLayout>

        <TextView
            android:id="@+id/surah_design_downloadedText"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:text="Downloaded"
            android:textStyle="italic"
            android:textColor="@color/green"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.cardview.widget.CardView>